set number
set relativenumber
set splitbelow
set splitright
set nowrap
set expandtab
set nohlsearch
set ignorecase
set termguicolors

set virtualedit=block
set encoding=utf-8
set shiftwidth=4
set tabstop=4
set background=dark
set textwidth=113

colorscheme retrobox
syntax on

nnoremap <Left> <nop>
nnoremap <Right> <nop>
nnoremap <Up> <nop>
nnoremap <Down> <nop>

inoremap <Left> <nop>
inoremap <Right> <nop>
inoremap <Up> <nop>
inoremap <Down> <nop>
    
vnoremap <Left> <nop>
vnoremap <Right> <nop>
vnoremap <Up> <nop>
vnoremap <Down> <nop>

set langmap=ФИСВУАПРШОЛДЬТЩЗЙКЫЕГМЦЧНЯ;ABCDEFGHIJKLMNOPQRSTUVWXYZ,фисвуапршолдьтщзйкыегмцчня;abcdefghijklmnopqrstuvwxyz
